<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#20A620"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textVchs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#193115"
        android:text="Let's Choose" />
    <TextView
        android:id="@+id/textVhabits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#FCFEFC"
        android:text="SOME HABITS" />
    <TextView
        android:id="@+id/textVdailyhabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="20dp"
        android:textColor="#FCFEFC"
        android:text="Choose your daily habits, you can choose\n more than once" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bgm"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:background="#FDFEFD"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">

                <ImageView
                    android:id="@+id/imageViewrunn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/run" />

                <TextView
                    android:id="@+id/textVrunning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:text="Running"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">

                <ImageView
                    android:id="@+id/imageViewreadd"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    app:srcCompat="@drawable/read"/>



                <TextView
                    android:id="@+id/textVreadingg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:text="Reading"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">

                <ImageView
                    android:id="@+id/imageViewswimm"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    app:srcCompat="@drawable/swim">

                </ImageView>

                <TextView
                    android:id="@+id/textVswimmingg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:text="Swimming"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>



        </LinearLayout>
        <LinearLayout
            android:layout_width="415dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:background="#FDFEFD"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">

                <ImageView
                    android:id="@+id/imageViewgymm"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"

                    app:srcCompat="@drawable/gym" />

                <TextView
                    android:id="@+id/textVgymmingg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:text="Gym"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">

                <ImageView
                    android:id="@+id/imageViewsing"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"

                    app:srcCompat="@drawable/music" />

                <TextView
                    android:id="@+id/textVsinging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:text="Music"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">

                <ImageView
                    android:id="@+id/imageViewcycle"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"

                    app:srcCompat="@drawable/cycle" />

                <TextView
                    android:id="@+id/textVcyclingg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:text="Cycling"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="415dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:background="#FDFEFD"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">
                <ImageView
                    android:id="@+id/imageViewgame"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"

                    app:srcCompat="@drawable/gaming" />

                <TextView
                    android:id="@+id/textVgamingg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:text="Gaming"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">
                <ImageView
                    android:id="@+id/imageViewyogaa"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"

                    app:srcCompat="@drawable/yoga" />

                <TextView
                    android:id="@+id/textVexercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:text="Yoga"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">
                <ImageView
                    android:id="@+id/imageViewwalkk"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"

                    app:srcCompat="@drawable/walk" />

                <TextView
                    android:id="@+id/textVwalkingg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:text="Walking"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="GET STARTED!"
            android:backgroundTint="#20A620"/>
    </LinearLayout>
</LinearLayout>



















